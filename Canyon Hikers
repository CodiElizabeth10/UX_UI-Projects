 <!--Audio JS-->
 <script>
    function StartOrStop(audioFile) {
      var audio = document.getElementById("myAudio");
      if (!audio.src || audio.src !== audioFile) audio.src = audioFile;
      if (audio.paused == false)
          audio.pause();
      else
          audio.play();
      }


 </script>
